<% if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2 p-2" role="alert">
  <span class="p-2"><%= success %></span>
  <button type="button" class="btn-close btn-sm m-3 p-0" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<% if(error && error.length){ %>
<div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2 p-2" role="alert">
  <%= error %>
  <button type="button" class="btn-close btn-sm m-3 p-0" data-bs-dismiss="alert" aria-label="Close"></button>
</div>  
<% } %>